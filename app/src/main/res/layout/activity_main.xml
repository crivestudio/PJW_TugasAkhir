<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputText"
        android:layout_gravity="center_horizontal"
        android:hint="Dolan Kemana Cuy?" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="btnFindCity"
        android:text="Cari" />

    <LinearLayout
        android:id="@+id/hasilws1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">


        <Spinner
            android:id="@+id/SpinnerHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="btnGetLain"
            android:text="Info Dolan!"
            android:visibility="visible" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/hasilws2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="visible">


        <TextView
            android:id="@+id/jadwal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Jadwal Shalat"
            android:textColor="#ff000000" />

        <TextView
            android:id="@+id/prayerTimeTxt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="subuh =" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="\nTempat Dolan Sekitar"
            android:textColor="#ff000000"/>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/debugText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lorem ipsum" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>
